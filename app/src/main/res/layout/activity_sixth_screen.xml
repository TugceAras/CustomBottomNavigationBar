<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SixthScreen"
    android:background="#c4c4c4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="150dp"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:text="Sixth Screen"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/sixthNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/menu_without_floating_button"
        app:labelVisibilityMode="labeled"
        android:background="@drawable/bottom_nav_gradient"
        android:layout_marginBottom="12dp"
        app:itemIconTint="@color/bottom_item_color"
        app:itemTextColor="@color/bottom_item_color"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>